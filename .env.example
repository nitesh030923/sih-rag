# Database Configuration
# For Docker deployment (recommended):
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/offrag
# For local development (without Docker backend):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/offrag

# Ollama Configuration
# For Docker deployment (backend in container):
OLLAMA_BASE_URL=http://host.docker.internal:11434
# For local development (backend on host):
# OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_LLM_MODEL=mistral
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=300

# Embedding Configuration
EMBEDDING_DIMENSIONS=768
MAX_TOKENS_PER_CHUNK=512

# RAG Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["*"]

# Logging
LOG_LEVEL=INFO
